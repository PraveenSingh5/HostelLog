<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="20dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="20dp"
    android:backgroundTint="@color/white"
    android:layout_height="120sp">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:id="@+id/card_layout"
            android:background="@drawable/cardboarder1"
            android:padding="5sp"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/room_id_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:layout_weight="1"
                android:text="A230"
                android:textColor="@color/black"
                app:layout_constraintHorizontal_bias="0.20"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/college_id_item"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/complain_type_id_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:layout_constraintHorizontal_bias="1"
                android:text="Electrician"
                android:textColor="@color/black"
                android:layout_margin="5sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/college_id_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5sp"
                android:textColor="@color/black"
                android:text="22bme047@iiitdmj.ac.in"
                app:layout_constraintEnd_toStartOf="@+id/complain_type_id_item"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/complain_id_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:textColor="@color/black"
                android:text="complain_id_item"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/college_id_item"
                app:layout_constraintVertical_bias="0.298" />
        </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>